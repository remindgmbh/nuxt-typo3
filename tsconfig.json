{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "types": [
      "@nuxt/types",
      "@types/node",
      "@nuxtjs/i18n",
      "nuxt-typo3",
      "@nuxtjs/axios",
    ],
    "paths": {
      "~rmnd-typo3/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}